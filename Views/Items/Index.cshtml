@model IEnumerable<AOWebApp.Models.Item>

@{
    ViewData["Title"] = "Shop Items";
}

<div class="bg-light py-3 mb-4 text-center">
    <h2 class="mb-0">@ViewData["Title"]</h2>
</div>

<a asp-action="Create" class="btn btn-outline-primary">Create New</a>

<br/>
<br/>

<div class="container"> 
    <div class="row row-cols-3 small">
        @foreach (var item in Model)
        {
            <div class="col card container-sm" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.ItemName</h5>
                    <p class="card-text">
                        @(item.ItemDescription.Length > 100
                            ? item.ItemDescription.Substring(0, 100).Trim() + "..."
                            : item.ItemDescription)
                    </p>
                    <p class="card-text">Cost: @item.ItemCost.ToString("C")</p>
                    <img src="@item.ItemImage" class="card-img-bottom" alt="@item.ItemName">
                    <br />
                    <br />
                    <a asp-controller="Items" asp-action="Details" asp-route-id="@item.ItemId"
                       class="btn btn-outline-primary">
                        View Item Detail
                    </a>

                </div>
            </div>

        }

    </div>


</div>
